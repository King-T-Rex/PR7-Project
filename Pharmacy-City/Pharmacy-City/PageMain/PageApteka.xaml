<Page x:Class="Pharmacy_City.PageMain.PageApteka"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pharmacy_City.PageMain"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageApteka">

    <Grid>
        <Button 
            Content="Назад"
            Name="BtnBack"
            Click="BtnBack_Click"
            Style="{StaticResource BtnTransparent}"/>

        <Grid>
            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <TextBlock FontSize="18pt" FontWeight="Bold" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center" Text="Главврач"/>
                    <Button Content="Аптеки" Click="btnPharmacies_Click" />
                    <Button Content="Препараты" Click="btnMedicines_Click" />
                    <Button Content="Процедура" Click="btnProcedure_Click" />
            </StackPanel>
        </Grid>
    </Grid>
</Page>
